<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/sample">Sample</a></li>
        <li style="float:right"><a class="active" href="#about">About</a></li>
    </ul>

    <br>

    <button class="btnShowAddUserForm">
        Add new user
    </button>

    <br><br>

    <div class="table-container">
        <h1 class="title">List User</h1>
        <table>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.name %></td>
                    <td><%= user.city %></td>
                    <td>
                        <form
                            action="/update-user/<%= user.id %>"
                            method="GET"
                            style="display: inline-block;"
                        >
                            <button class="btnEditUser">Edit</>
                        </form>
                        <form
                            action="/delete-user/<%= user.id %>"
                            method="POST"
                            style="display: inline-block;"
                        >
                            <button class="btnDeleteUser">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>

    <form action="/create-user" method="POST" class="formAddUser">
        <fieldset>
            <legend>Add new user</legend>
            <label for="name">Name:</label>
            <input type="text" name="name" id="name"/>
            <br><br>
            <label for="email">Email:</label>
            <input type="text" name="email" id="email"/>
            <br><br>
            <label for="city">City:</label>
            <input type="text" name="city" id="city"/>
            <br><br>
            <button>Save</button>
        </fieldset>
    </form>

    <script type="module" src="/js/home.js"></script>
</body>
</html>